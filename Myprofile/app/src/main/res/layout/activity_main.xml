        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7999647103"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#555555"
